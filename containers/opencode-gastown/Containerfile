# OpenCode + GasTown container
# Includes Go, gt (gastown CLI), bd (beads CLI), and Python
#
# Build: podman build -t claude-code:opencode-gastown .

# Stage 1: Get Go from official image
FROM golang:latest AS go-builder

# Stage 2: Main image
FROM debian:bookworm

# Copy Go installation from golang image
COPY --from=go-builder /usr/local/go /usr/local/go
ENV PATH="/usr/local/go/bin:${PATH}"
ENV GOPATH="/root/go"
ENV PATH="${GOPATH}/bin:${PATH}"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    tmux \
    git \
    curl \
    vim \
    openssh-client \
    ca-certificates \
    python3 \
    python3-pip \
    python3-venv \
    sqlite3 \
    && rm -rf /var/lib/apt/lists/*

# Install gt (gastown) and bd (beads) CLI tools
RUN go install github.com/steveyegge/gastown/cmd/gt@latest \
    && go install github.com/steveyegge/beads/cmd/bd@latest

# Install OpenCode
RUN curl -fsSL https://opencode.ai/install | bash

# Create workspace directory
RUN mkdir -p /workspace

WORKDIR /workspace

CMD ["/bin/bash"]
